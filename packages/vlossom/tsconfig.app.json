{
    "extends": "@vue/tsconfig/tsconfig.dom.json",
    "include": ["src/**/*", "src/**/*.vue"],
    "exclude": ["src/**/__tests__/*", "src/**/*.stories.ts", ".storybook/**/*", ".storybook-chromatic/**/*"],
    "compilerOptions": {
        "tsBuildInfoFile": "./node_modules/.tmp/tsconfig.app.tsbuildinfo",

        "paths": {
            "@/*": ["./src/*"]
        },

        "baseUrl": ".",
        "sourceMap": true,
        "declaration": true,
        "declarationMap": true,
        "declarationDir": "./dist"
    }
}
